# ============================================================================
# .ENV - Configuration Environnement
# ============================================================================
# À copier en tant que .env dans le répertoire racine
# NE PAS commiter en production!

# ============================================================================
# FLASK/ENVIRONMENT
# ============================================================================
FLASK_ENV=development
DEBUG=True

# ============================================================================
# DASHBOARD CONFIGURATION
# ============================================================================
DASH_HOST=127.0.0.1
DASH_PORT=8050
DASH_THREADED=True

# ============================================================================
# DATA PATHS
# ============================================================================
DATA_PATH=./data
MODELS_PATH=./models
LOGS_PATH=./logs

# ============================================================================
# DATABASE (OPTIONNEL)
# ============================================================================
DATABASE_URL=sqlite:///aero_maintenance.db
# DATABASE_URL=postgresql://user:password@localhost:5432/aero_db

# ============================================================================
# API KEYS (OPTIONNEL)
# ============================================================================
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# ============================================================================
# ALERT SETTINGS
# ============================================================================
ALERT_EMAIL_ENABLED=False
ALERT_EMAIL_RECIPIENT=admin@aeromaintain.fr
ALERT_SLACK_ENABLED=False
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/dashboard.log

# ============================================================================
# SECURITY
# ============================================================================
SECRET_KEY=change_this_secret_key_in_production
SESSION_TIMEOUT=3600

# ============================================================================
# CACHE
# ============================================================================
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# ============================================================================
# FEATURES
# ============================================================================
ENABLE_ANOMALY_DETECTION=True
ENABLE_REAL_TIME_UPDATES=True
REFRESH_INTERVAL_MS=30000

# ============================================================================
# THRESHOLDS (RUL)
# ============================================================================
RUL_THRESHOLD_CRITICAL=10
RUL_THRESHOLD_WARNING=30

# ============================================================================
# MODEL PARAMETERS
# ============================================================================
MODEL_TYPE=gradient_boosting
MODEL_FILE=models/model_gb.pkl
SCALER_FILE=models/scaler.pkl
